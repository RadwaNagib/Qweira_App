pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository
                git 'https://github.com/RadwaNagib/Qweira_App.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn clean install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run your Maven project tests
                sh 'mvn test'
            }
        }

        stage('Deploy') {
            steps {
                // Additional deployment steps if needed
            }
        }
    }
}
